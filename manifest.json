{
 "manifest_version": 2,
 "name": "Timetable clone for chrome",
 "version": "1.0.0",
 "description": "Easy acess to your next classes, with alerts!",
 "short_name": "Short Sample Name",
 "permissions": ["activeTab", "declarativeContent", "storage", "<all_urls>"],
 "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "css": ["background.css"],
     "js": ["background.js"]
   }
 ],
 "browser_action": {
   "default_title": "Does a thing when you do a thing",
   "default_popup": "popup.html",
   "default_icon": {
     "16": "icon.png",
     "32": "icon.png"
   }
 }
}